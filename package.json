{
  "name": "euchre-multiplayer",
  "version": "1.0.0",
  "description": "Multiplayer Euchre Game Server",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node --no-warnings --experimental-vm-modules node_modules/mocha/bin/mocha",
    "test:watch": "node --no-warnings --experimental-vm-modules node_modules/mocha/bin/mocha --watch",
    "test:debug": "node --inspect --no-warnings --experimental-vm-modules node_modules/mocha/bin/mocha",
    "test:coverage": "c8 mocha --require @babel/register --require ./test/setup.js",
    "test:coverage:ci": "c8 --reporter=lcov mocha --require @babel/register --require ./test/setup.js",
    "coverage:report": "npx c8 report --reporter=text-lcov | npx coveralls",
    "migrate": "node migrate.js",
    "init:modules": "node init-modules.js"
  },
  "c8": {
    "exclude": [
      "**/test/**",
      "**/node_modules/**",
      "**/coverage/**",
      "**/public/**",
      "**/.git/**"
    ],
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "all": true
  },
  "keywords": [
    "euchre",
    "card-game",
    "multiplayer",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0",
    "mongodb": "^6.16.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/register": "^7.23.9",
    "@jest/globals": "^29.7.0",
    "c8": "^9.1.0",
    "chai": "^5.2.0",
    "esm": "^3.2.25",
    "mocha": "^11.4.0",
    "nodemon": "^3.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^18.0.1",
    "sinon-chai": "^4.0.0"
  }
}
