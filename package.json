{
  "name": "euchre-multiplayer",
  "version": "1.0.0",
  "description": "Multiplayer Euchre Game Server",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx mocha \"src/test/**/*.test.js\" --timeout 5000 --reporter spec",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules npx mocha \"src/test/**/*.test.js\" --timeout 5000 --watch --reporter min",
    "migrate": "node migrate.js",
    "init:modules": "node init-modules.js"
  },
  "keywords": ["euchre", "card-game", "multiplayer", "nodejs"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "mocha": "^11.4.0",
    "nodemon": "^3.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^18.0.0"
  }
}
