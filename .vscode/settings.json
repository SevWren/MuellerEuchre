{
  "debug.terminal.clearBeforeReusing": true,
  "terminal.integrated.allowChords": true,
  
  // Terminal profiles for Windows with G: drive
  "terminal.integrated.profiles.windows": {
    "Command Prompt": {
      "path": "G:\\Windows\\System32\\cmd.exe",
      "args": ["/K", "G:\\"],
      "icon": "terminal-cmd"
    },
    "PowerShell": {
      "path": "G:\\Program Files\\PowerShell\\7\\pwsh.exe",
      "args": ["-NoExit", "-WorkingDirectory", "G:\\"],
      "icon": "terminal-powershell"
    },
    "Git Bash": {
      "path": "G:\\Program Files\\Git\\bin\\bash.exe",
      "args": ["--login", "-i"],
      "icon": "terminal-bash"
    }
  },
  
  // Default terminal profiles
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.automationProfile.windows": null,
  "terminal.integrated.defaultProfile.linux": "bash",
  
  // Terminal shell configuration - Using Command Prompt
  "terminal.integrated.shell.windows": "G:\\Windows\\System32\\cmd.exe",
  "terminal.integrated.shellArgs.windows": [
    "/K",
    "G:\\"
  ],
  
  // Environment variables for terminal
  "terminal.integrated.env.windows": {
    "SystemDrive": "G:",
    "SystemRoot": "G:\\Windows"
  },
  
  // Terminal appearance
  "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.shellIntegration.enabled": true,
  "files.autoSave": "onWindowChange",
  "typescript.tsserver.maxTsServerMemory": 4096,
  "files.exclude": {
    "**/*.rpyc": true,
    "**/*.rpa": true,
    "**/*.rpymc": true,
    "**/cache/": true
  }
}
