{
  "name": "euchre-multiplayer",
  "version": "1.0.0",
  "description": "Multiplayer Euchre Game Server",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "npx mocha --require esm \"G:/Users/mmuel/OneDrive/Documents/GitHub/MuellerEuchre/euchre-multiplayer/test/**/*.test.js\"",
    "test:watch": "npx mocha --require esm --watch \"G:/Users/mmuel/OneDrive/Documents/GitHub/MuellerEuchre/euchre-multiplayer/test/**/*.test.js\"",
    "test:coverage": "npx c8 --reporter=html --reporter=text --reporter=lcov mocha --require esm \"G:/Users/mmuel/OneDrive/Documents/GitHub/MuellerEuchre/euchre-multiplayer/test/**/*.test.js\"",
    "test:coverage:ci": "npx c8 --reporter=lcov mocha --require esm \"G:/Users/mmuel/OneDrive/Documents/GitHub/MuellerEuchre/euchre-multiplayer/test/**/*.test.js\"",
    "coverage:report": "npx c8 report --reporter=text-lcov | npx coveralls",
    "migrate": "node migrate.js",
    "init:modules": "node init-modules.js"
  },
  "c8": {
    "exclude": [
      "**/test/**",
      "**/node_modules/**",
      "**/coverage/**",
      "**/public/**",
      "**/.git/**"
    ],
    "include": ["src/**/*.js"],
    "reporter": ["text", "html", "lcov"],
    "all": true
  },
  "keywords": ["euchre", "card-game", "multiplayer", "nodejs"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "mocha": "^11.4.0",
    "nodemon": "^3.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^18.0.0"
  }
}
